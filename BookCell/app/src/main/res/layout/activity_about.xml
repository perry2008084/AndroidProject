<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    android:weightSum="1">

    <ImageView
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:paddingTop="35dp"
        android:layout_weight="0.24" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_about_version_offset"
        >
        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_version"
            android:paddingTop="15dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/tv_app_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/tv_app_version"
            android:text="@string/app_author"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/tv_app_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@id/tv_app_author"
            android:text="@string/app_email"
            android:paddingTop="15dp" />
    </RelativeLayout>

</LinearLayout>